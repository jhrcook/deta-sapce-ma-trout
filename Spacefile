v: 0
micros:
  - name: data-scraping
    src: data-scraping
    engine: custom
    dev: cargo run
    include:
      - ./scrape_trout_stocking
    commands:
      - echo "Executable built on GitHub Action"
      - pwd
      - ls -lha
    run: ./scrape_trout_stocking
    actions:
      - id: "scrape-new-data"
        name: "Scrape new data"
        description: "Collects new data and saves it to Deta Base."
        trigger: "schedule"
        default_interval: "0 5,12,21 * * *"
